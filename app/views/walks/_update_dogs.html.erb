<% if walk.dogs.count > 0 %>
  <p>The following dogs are booked for this walk!</p>
  <% walk.dogs.each do |d| %>
    <div class="input-group" align="left" >
      <div class="form-inline">
        <%= form_for walk do |f| %>
          <p><%= d.name %>
            <% params[:note] = "" %>
          <%= text_field_tag("note", params[:note], :size => 15, :placeholder=> "") %>
          <%= button_to 'Add Note', (dog_walk_path(d.id, walk.id)), params: {'dog_id' => d.id, 'walk_id' => walk.id} %>
        <% end %>
      </div>
    </div></p>
  <% end %>
<% end %>
